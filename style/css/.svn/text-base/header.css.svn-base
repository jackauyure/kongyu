/*头部样式*/
.topbanner { position:relative; width:1000px; margin:auto; font-size:12px; }
.topbanner .language { width:85px; height:20px; position:absolute; background:#13499a; text-align:center; line-height:20px; color:#dae2ef; font-family:Tahoma; z-index:1; right:30px; top:30px; }
.topbanner .language a,.topbanner .language a:hover { color:#dae2ef; text-decoration:none; }
.topnav { width:1000px; margin:auto; margin-bottom:15px; font-size:14px; height:30px; line-height:30px; font-family:"微软雅黑", "黑体"; background:#13499a; position:relative; }
.topnav a { color:#dae2ef; text-decoration:none; display:inline-block; }
.topnav a:hover { color:#dae2ef;}
.topnav ul { margin:0; padding:0; list-style:none; }
.topnav li { float:left; }
.topnav .cnhome a { padding:0 34px; }
.topnav .cnsub a { padding:0 43px; }
.topnav .enhome a { padding:0 31px; }

.subnavwrap { position:absolute; top:-30px; z-index:10;}
.topnav ul.subnav { height:30px; background:#13499a; filter:alpha(opacity=80); background:rgba(19, 73, 154, 0.8); }
.topnav ul.subnav li { position:relative; }
.topnav .cnhome .subnav a { display:inline-block; padding:0 25px; }
.topnav .enhome .subnav a { display:inline-block; padding:0 20px; }

