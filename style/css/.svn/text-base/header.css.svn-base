.logo_left { width:345px; height:200px; background:url(../images/header/logo_left.png); position:absolute;left:0; z-index:1;}
.logo_right { width:220px; height:200px; background:url(../images/header/logo_right.png); position:absolute; right:0; z-index:1;}
.slides { position:relative; overflow:hidden; width:1000px; height:200px; margin:0 auto; background:#13499a; }
.slides ul { margin:0; padding:0; list-style:none; }
.slide-pic { overflow:hidden; width:1000px }
.slide-pic img { width:1000px; height:200px; border:0;}
.slide-pic li { display:none }
.slide-pic li.cur { display:block }

/*底部样式*/
.footer { width:1000px; margin:auto; font-size:12px; color:#797a7a; text-align:center; }
.footer_nav { height:30px; line-height:30px; font-size:14px; font-family:"微软雅黑", "黑体"; background:#13499A; color:#dae2ef; }
.footer_nav a,.footer_nav a:hover { color:#dae2ef; text-decoration:none; display:inline-block; margin:0 30px; }
